<% provide(:title,'Home') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
   	    <%= render 'shared/stats' %>
      </section>
      <section>
   	    <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
        <%= render 'shared/feed'%>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Parth's App&trade;</h1>
    <h3>
      Have you your own micropost?<br>
      You can have it here.<br>
      Try it!
    </h3>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %><br><br>
    <h4>Already have an account?<br>
    <%= link_to "Sign in", signin_path %>
    </h4>
  </div>
<% end %>
